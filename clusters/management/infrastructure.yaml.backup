---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: capi-infrastructure
  namespace: flux-system
spec:
  interval: 10m0s
  retryInterval: 2m0s
  timeout: 15m0s
  sourceRef:
    kind: GitRepository
    name: flux-system
  path: ./infrastructure/base
  prune: true
  wait: true
  postBuild:
    substitute: {}
    substituteFrom: []
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: openstack-provider
  namespace: flux-system
spec:
  interval: 10m0s
  retryInterval: 2m0s
  timeout: 10m0s
  dependsOn:
    - name: capi-infrastructure
  sourceRef:
    kind: GitRepository
    name: flux-system
  path: ./infrastructure/openstack/provider
  prune: true
  wait: true
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: openstack-credentials
  namespace: flux-system
spec:
  interval: 10m0s
  retryInterval: 2m0s
  timeout: 5m0s
  dependsOn:
    - name: openstack-provider
  sourceRef:
    kind: GitRepository
    name: flux-system
  path: ./infrastructure/openstack/credentials
  prune: true